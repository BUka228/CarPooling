<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <!-- Подключение к PostgreSQL -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://192.168.56.1:5432/CarPooling</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">11111111</property>

        <!-- Настройки Hibernate -->
        <property name="hibernate.show_sql">true</property>  <!-- Показывать SQL-запросы в логах -->
        <property name="hibernate.format_sql">true</property> <!-- Форматировать SQL в логах -->
        <property name="hibernate.hbm2ddl.auto">update</property>  <!-- Автоматическое обновление схемы -->

        <property name="hibernate.archive.autodetection">class, hbm</property>
    </session-factory>
</hibernate-configuration>
