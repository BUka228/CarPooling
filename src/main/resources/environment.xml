<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
    <comment>Configuration properties example</comment>

    <!-- Database settings -->
    <entry key="db.url">jdbc:postgresql://192.168.56.1:5432/CarPooling</entry>
    <entry key="db.user">postgres</entry>
    <entry key="db.password">11111111</entry>

    <!-- MongoDB settings -->
    <entry key="mongodb.uri">mongodb://localhost:27017</entry>
    <entry key="mongodb.db">myDatabase</entry>
    <entry key="mongodb.collection">history</entry>

    <!-- Collections -->
    <entry key="collections.users">users_collection</entry>
    <entry key="collections.trips">trips_collection</entry>
    <entry key="collections.routes">routes_collection</entry>
    <entry key="collections.bookings">bookings_collection</entry>
    <entry key="collections.ratings">ratings_collection</entry>

    <!-- File paths -->
    <entry key="xml.file.path">./data/xml/</entry>
    <entry key="csv.file.path">./data/csv/</entry>

    <!-- Other settings -->
    <entry key="working.directory">/path/to/working/directory</entry>
    <entry key="planets">Земля,Сатурн,Марс,Венера</entry>
    <entry key="months">1:Январь,2:Февраль,3:Март,4:Апрель,5:Май,6:Июнь,7:Июль,8:Август,9:Сентябрь,10:Октябрь,11:Ноябрь,12:Декабрь</entry>
</properties>
